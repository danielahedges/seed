div
  a(href="/oauth/facebook") Login With Facebook
  div
    a(href="/oauth/twitter") Login With Twitter
form(method="post" action="/login")
  div.input-field
    i.material-icons.prefix account_box
    input(id="username" name="username" type="text")
    label(for="username") {{'INDEX.USERNAME' | translate}}
  div.input-field
    i.material-icons.prefix lock
    input(id="password" name="password" type="password")
    label(for="password") {{'INDEX.PASSWORD' | translate}}
  div.input-field
    input.btn.waves-effect.waves-light(type="submit" data-ng-value="'INDEX.LOGIN_BUTTON' | translate")
