extends layout

block content
  h3 {{ 'USERPROFILE_CHANGEPASSWORD.TITLE' | translate }}
  if messages && messages.length > 0
    each message in messages
      div.flash.flow-text.red-text= '{{"'+message+'"|translate}}'
  form(data-ng-submit="changePassword();", data-ng-init="initChangePassword();")
    div.row
      div.input-field.s12.m12.col
        i.material-icons.prefix lock
        input(id="current-password", name="current-password", type="password", data-ng-model="currentPassword")
        label(for="current-password") {{ 'INDEX.PASSWORD' | translate }}
    include ./passwordWidget
    div.row
      div.col.s4.offset-s1
        input.btn.waves-effect.waves-light(type="submit", data-ng-value="'INDEX.SUBMIT' | translate", data-ng-disabled="!validate()")
      div.col.s4.offset-s2
        a.btn.waves-effect.waves-light(href="/#!/profile") {{ 'INDEX.CANCEL' | translate }}
