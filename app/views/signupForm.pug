div
  a(href="/oauth/facebook") Sign Up With Facebook
div
  a(href="/oauth/twitter") Sign Up With Twitter
form#sign-up-form(method="post" action="/signup")
  div.input-field
    i.material-icons.prefix account_box
    input(id="username", name="username", type="text", autocapitalize="none", autocorrect="off", required)
    label(for="username") Username
  include passwordWidget
  div.input-field
    input(type="hidden", name="code", value=signupcode)
    input.btn(type="submit", value="Sign Up",
    data-ng-disabled="!validate()")
