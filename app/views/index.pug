extends layout

block content
	if user
		div.container
			section(ng-view)
	else
		// No user logged in.
		div.container
			include messages
			include loginForm
			h3 {{'INDEX.SIGNUP' | translate}}
			div(data-ng-controller="UserController", data-ng-init="initSignUp()")
				include signupForm
	div
		script(type='text/javascript')
			| window.user =
			if user
				| !{user}
			else
				| null
